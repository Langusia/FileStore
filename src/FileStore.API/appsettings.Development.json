{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "FileStore": "Debug"
    }
  },
  "Database": {
    "ConnectionString": "Server=localhost;Database=FileStore;User Id=sa;Password=YourPassword123;TrustServerCertificate=True"
  },
  "Storage": {
    "Backend": "SMB",
    "HotRootPath": "./storage/hot",
    "ColdRootPath": "./storage/cold",
    "Shard": {
      "Levels": 3,
      "CharsPerShard": 2
    },
    "MaxFileSizeMb": 100
  },
  "Tiering": {
    "Enabled": false,
    "IntervalMinutes": 5,
    "ColdAfterDays": 1
  }
}
