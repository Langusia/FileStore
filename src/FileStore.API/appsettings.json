{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "FileStore": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "ConnectionString": "Server=localhost;Database=FileStore;User Id=sa;Password=YourPassword123;TrustServerCertificate=True"
  },
  "Storage": {
    "Backend": "SMB",
    "HotRootPath": "/mnt/storage/hot",
    "ColdRootPath": "/mnt/storage/cold",
    "Shard": {
      "Levels": 3,
      "CharsPerShard": 2
    },
    "MaxFileSizeMb": 100,
    "EnableRangeReads": true,
    "AllowedContentTypes": [
      "application/pdf",
      "image/jpeg",
      "image/png",
      "image/gif",
      "application/octet-stream"
    ]
  },
  "Tiering": {
    "Enabled": true,
    "IntervalMinutes": 60,
    "ColdAfterDays": 365,
    "BatchSize": 100,
    "BucketsExcludedFromCold": [
      "audit-logs"
    ]
  }
}
